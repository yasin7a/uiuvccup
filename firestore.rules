rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Teams collection - allow read to all, write to authenticated users
    match /teams/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Players collection - allow read to all, write to authenticated users
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection - allow read/write to authenticated users only
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Auction bids collection - allow read to all, write to authenticated users
    match /auction_bids/{bidId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule for any other collections
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
